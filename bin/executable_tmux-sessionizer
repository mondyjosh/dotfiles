#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(find ~ ~/dev ~/dev/work -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

# If a tmux server is not running,
# create a new session with selected
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s $selected_name -c $selected
	exit 0
fi

# If a tmux server is running,
# attach to selected session if it exists, or create a new one
if [[ -z $TMUX ]]; then
	tmux new-session -A -s $selected_name -c $selected
	exit 0
fi

# If a tmux server is running,
# create a new session with selected
if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
